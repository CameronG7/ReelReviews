
<ul class="mt-3" id="commentList">
  <h1 class="text-light text-center">Welcome back {{user.username}}!</h1>


  {{#if user.reviews.length}}
  <h3 class="m-3 text-center"><em>Your past reviews:</em></h3>
    {{#each user.reviews as |review|}}
    <section class='card mt-2 col-3'>
      <div class='card-body p-3'>
        <h4 class='card-title'>{{review.movie.title}} <h5>{{review.rating}}</h5>
        </h4>



        <h6 class='card-text'>{{review.comment}}</h6>
        <div class='col-md-4'>
  <button
    class='btn btn-sm btn-danger' type="submit"
    id='updateBtn'
    data-id='{{review.id}}'
  >UPDATE</button>
</div>
<br>
<div class='col-md-4'>
  <button
    class='btn btn-sm btn-danger' type="submit"
    id='deleteBtn'
    data-id='{{review.id}}'
  >Delete Review</button>
</div>
      </div>
    </section>
    {{/each}}

    {{else}}
    <h3 class="text-light text-center mt-5">It looks like you haven't posted any reviews yet ðŸ˜²</h3>
    <h3 class="text-light text-center mt-2">Get posting â†“</h3>
    {{/if}}

</ul>

<li class="nav-item">
  <a class="nav-link active text-dark" aria-current="page" id="deleteUserBtn" href="/deleteUser">ðŸ’€ðŸ‘¤</a>





