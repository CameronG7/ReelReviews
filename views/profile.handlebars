<section id='newreview' class='card text-center'>
  <div class='card-body'>
    <h3 class='card-title'>Create a New Review:</h3>
    <form class='form new-review-form'>
      <div class='form-group'>
        <label for='review-title'>Movie Title:</label>
        <div></div>
        <input class='form-input' type='text' id='review-title' name='review-title' />
      </div>
      <div class='form-group mt-2'>
        <label for='review-body clas'>Tell us what you thought:</label>
        <div></div>

        <input class='form-input' id='review-body' name='review-body' />
      </div>
      <div class='form-group mt-2'>
        <label for='review-body clas'>What would you give the movie out of 10?</label>
        <div></div>
        <input class='form-input' id='review-rating' name='review-rating' />

      </div>
      <div class='form-group mt-2'>
        <button
          type='submit'
          class='btn btn-primary'
          id='createBtn'
          data-bs-toggle='modal'
          data-bs-target='#staticBackdrop'
        >Create</button>
      </div>
    </form>
  </div>

</section>
<!-- Modal -->
<div
  class='modal fade'
  id='staticBackdrop'
  data-bs-backdrop='static'
  data-bs-keyboard='false'
  tabindex='-1'
  aria-labelledby='staticBackdropLabel'
  aria-hidden='true'
>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='staticBackdropLabel'>Great Success!</h5>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>
        Thanks for your review!
      </div>
      <div class='modal-footer'>
        <button
          type='button'
          class='btn btn-secondary'
          data-bs-dismiss='modal'
        >Close</button>
        
      </div>
    </div>
  </div>
</div>

